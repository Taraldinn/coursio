# Database (Supabase - Region: us-east-2)
# Get your connection strings from Supabase Dashboard > Project Settings > Database

# Pooled connection for app runtime (pgbouncer)
DATABASE_URL="postgresql://postgres.<project-ref>:<password>@aws-1-us-east-2.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection for migrations (Prisma)
DIRECT_URL="postgresql://postgres.<project-ref>:<password>@aws-1-us-east-2.pooler.supabase.com:5432/postgres"

# Supabase (for client-side operations if needed)
NEXT_PUBLIC_SUPABASE_URL="https://<project-ref>.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# Clerk Authentication
# Get your keys from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
CLERK_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Email (Resend - get free API key at resend.com)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
EMAIL_FROM="onboarding@resend.dev"
SMTP_HOST="smtp.resend.com"
SMTP_PORT="587"
SMTP_USER="resend"
SMTP_PASSWORD="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# IMGBB (Image hosting - get free API key at api.imgbb.com)
IMGBB_API_KEY="your-imgbb-api-key"

# YouTube Data API v3 (get key from Google Cloud Console)
YOUTUBE_API_KEY="your-youtube-api-key"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
APP_URL="http://localhost:3000"
NODE_ENV="development"
